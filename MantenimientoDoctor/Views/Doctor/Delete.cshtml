@{
}

<div class="row">
    <div class="col-md-9"></div>
    <div class="col-md-3">
        <a style="margin-bottom: 5%" asp-action="Index" class="btn btn-dark float-right">Volver atrás</a>
    </div>
</div>

<div class="card">
    <div class="bg-danger text-light card-header">
        <strong>Borrar Doctor @Model.Nombre</strong>
    </div>

    <div class="card-body">
        <h2>¿Está seguro de eliminar al doctor @Model.Nombre?</h2>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-light text-dark"> Cancelar </a>
        </form>

    </div>
</div>

