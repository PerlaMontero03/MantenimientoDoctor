@model List<Doctor>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}

<div class="card text-center">
    <div class="bg-dark text-light card-header">
        <strong>Listado de Doctores</strong>
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3">
                <a style="margin-bottom: 5%" asp-action="Create" class="btn btn-outline-success float-right">Crear Nuevo Doctor</a>
            </div>
        </div>

        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Fecha de Nacimiento</th>
                    <th scope="col">Codigo Postal</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Doctor item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Telefono</td>
                        <td>@item.Nombre</td>
                        <td>@item.Correo</td>
                        <td>@item.FechaNacimiento</td>
                        <td>@item.CodigoPostal</td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.Id"> Editar </a>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"> Borrar </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
